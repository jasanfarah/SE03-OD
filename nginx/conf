server {
    listen 80;
    server_name localhost 127.0.01;

    location /person {
        proxy_pass http://app:80/person;
        proxy_set_header X-Forwarded-For $remote_addr;
     
    };

      location /persons {
        proxy_pass http://app:80/persons;
        proxy_set_header X-Forwarded-For $remote_addr;
    };
}